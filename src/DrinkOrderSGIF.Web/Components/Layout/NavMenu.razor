@inject AdminAuthService AuthService
@inject NavigationManager Navigation
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Drink Order</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="admin">
                <span class="bi bi-clipboard-check-nav-menu" aria-hidden="true"></span> Admin
            </NavLink>
        </div>
        @if (_isAuthenticated)
        {
            <div class="nav-item px-3">
                <button class="nav-link btn btn-link" @onclick="LogoutAsync">Log out</button>
            </div>
        }
    </nav>
</div>

@code {
    private bool _isAuthenticated;

    private bool _isDisposed;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var authenticated = await AuthService.IsAuthenticatedAsync();
            if (_isDisposed)
            {
                return;
            }

            if (_isAuthenticated != authenticated)
            {
                _isAuthenticated = authenticated;
                await InvokeAsync(StateHasChanged);
            }
        }
    }

    private async Task LogoutAsync()
    {
        await AuthService.LogoutAsync();
        _isAuthenticated = false;
        Navigation.NavigateTo("/");
    }

    public void Dispose()
    {
        _isDisposed = true;
    }
}
