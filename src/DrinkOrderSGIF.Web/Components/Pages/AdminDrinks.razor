@page "/admin/drinks"
@inherits AdminPageBase

@inject IDrinkService DrinkService

@using System.Globalization

<PageTitle>Administrer drinks</PageTitle>

@if (!IsAuthorized)
{
    <p>Sender til login-siden...</p>
}
else
{
    <h1>Drinks</h1>

    <div class="admin-form">
        <input placeholder="Nyt drinknavn" @bind="_newDrinkName" />
        <input type="number" min="0" step="1" placeholder="Pris (DKK)" @bind="_newDrinkPrice" />
        <input type="text" inputmode="decimal" placeholder="Pris (Klips, valgfri)" @bind="_newDrinkKlipsPriceInput" />
        <button class="order-button" @onclick="AddDrink">Tilføj drink</button>
    </div>

    @if (_drinks.Count == 0)
    {
        <p>Ingen drinks tilføjet endnu.</p>
    }
    else
    {
        <div class="admin-list">
            @foreach (var drink in _drinks)
            {
                <div class="admin-row">
                    <div>
                        @if (_editingDrinkId == drink.Id)
                        {
                            <input placeholder="Drinknavn" @bind="_editingDrinkName" />
                            <input type="number" min="0" step="1" placeholder="Pris (DKK)" @bind="_editingDrinkPrice" />
                            <input type="text" inputmode="decimal" placeholder="Pris (Klips, valgfri)" @bind="_editingDrinkKlipsPriceInput" />
                        }
                        else
                        {
                            <strong>@drink.Name</strong>
                            <span class="status-tag">@drink.Price DKK</span>
                            @if (drink.KlipsPrice.HasValue)
                            {
                                <span class="status-tag">@FormatKlips(drink.KlipsPrice.Value) Klips</span>
                            }
                            <span class="status-tag">@((drink.IsActive) ? "Aktiv" : "Inaktiv")</span>
                        }
                    </div>
                    <div class="admin-actions">
                        @if (_editingDrinkId == drink.Id)
                        {
                            <button class="order-button" @onclick="() => SaveDrinkEdit(drink)">Gem</button>
                            <button class="secondary-button" @onclick="CancelDrinkEdit">Annuller</button>
                        }
                        else
                        {
                            <button class="secondary-button" @onclick="() => StartDrinkEdit(drink)">Rediger</button>
                            <button class="secondary-button" @onclick="() => ToggleDrink(drink)">
                                @(drink.IsActive ? "Fjern" : "Gendan")
                            </button>
                        }
                    </div>
                </div>
            }
        </div>
    }
}

@code {
    private string _newDrinkName = string.Empty;
    private int? _newDrinkPrice;
    private string _newDrinkKlipsPriceInput = string.Empty;
    private IReadOnlyList<Drink> _drinks = Array.Empty<Drink>();
    private Guid? _editingDrinkId;
    private string _editingDrinkName = string.Empty;
    private int _editingDrinkPrice;
    private string _editingDrinkKlipsPriceInput = string.Empty;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && await EnsureAuthorizedAsync())
        {
            await LoadDrinksAsync();
            StateHasChanged();
        }
    }

    private async Task LoadDrinksAsync()
    {
        _drinks = await DrinkService.GetAllDrinksAsync();
    }

    private async Task AddDrink()
    {
        if (string.IsNullOrWhiteSpace(_newDrinkName)
            || _newDrinkPrice is null)
        {
            return;
        }

        if (!TryParseKlipsPrice(_newDrinkKlipsPriceInput, out var klipsPrice))
        {
            return;
        }

        await DrinkService.AddDrinkAsync(
            _newDrinkName,
            _newDrinkPrice.Value,
            klipsPrice);
        _newDrinkName = string.Empty;
        _newDrinkPrice = null;
        _newDrinkKlipsPriceInput = string.Empty;
        await LoadDrinksAsync();
    }

    private void StartDrinkEdit(Drink drink)
    {
        _editingDrinkId = drink.Id;
        _editingDrinkName = drink.Name;
        _editingDrinkPrice = drink.Price;
        _editingDrinkKlipsPriceInput = drink.KlipsPrice.HasValue ? FormatKlips(drink.KlipsPrice.Value) : string.Empty;
    }

    private void CancelDrinkEdit()
    {
        _editingDrinkId = null;
        _editingDrinkName = string.Empty;
        _editingDrinkPrice = 0;
        _editingDrinkKlipsPriceInput = string.Empty;
    }

    private async Task SaveDrinkEdit(Drink drink)
    {
        if (_editingDrinkId != drink.Id || string.IsNullOrWhiteSpace(_editingDrinkName))
        {
            return;
        }

        if (!TryParseKlipsPrice(_editingDrinkKlipsPriceInput, out var klipsPrice))
        {
            return;
        }

        await DrinkService.UpdateDrinkAsync(
            drink.Id,
            _editingDrinkName,
            _editingDrinkPrice,
            klipsPrice);
        await LoadDrinksAsync();
        CancelDrinkEdit();
    }

    private async Task ToggleDrink(Drink drink)
    {
        await DrinkService.SetDrinkActiveAsync(drink.Id, !drink.IsActive);
        await LoadDrinksAsync();
    }

    private static bool TryParseKlipsPrice(string? input, out decimal? value)
    {
        if (string.IsNullOrWhiteSpace(input))
        {
            value = null;
            return true;
        }

        var normalized = input.Replace(',', '.');
        if (decimal.TryParse(
                normalized,
                NumberStyles.Number,
                CultureInfo.InvariantCulture,
                out var parsed))
        {
            value = parsed;
            return true;
        }

        value = null;
        return false;
    }

    private static string FormatKlips(decimal value)
    {
        return value.ToString("0.##", CultureInfo.GetCultureInfo("da-DK"));
    }
}
