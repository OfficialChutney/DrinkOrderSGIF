@page "/admin/stats/drinks"
@inherits AdminPageBase

@inject IStatsService StatsService
@inject NavigationManager Navigation

@using Microsoft.AspNetCore.SignalR.Client
@implements IAsyncDisposable

<PageTitle>Drink Totals</PageTitle>

@if (!IsAuthorized)
{
    <p>Sender til login side...</p>
}
else
{
    <h1>Total Drinks</h1>

    @if (_summaries.Count == 0)
    {
        <p>Ingen drinks bestilt endnu.</p>
    }
    else
    {
        <div class="admin-list">
            @foreach (var summary in _summaries)
            {
                <div class="admin-row">
                    <strong>@summary.DrinkName</strong>
                    <span>@summary.Quantity</span>
                </div>
            }
            <div class="admin-row">
                <strong>Total</strong>
                <span>@TotalDrinks</span>
            </div>
        </div>
    }
}

@code {
    private IReadOnlyList<DrinkSummary> _summaries = Array.Empty<DrinkSummary>();
    private int TotalDrinks => _summaries.Sum(summary => summary.Quantity);
    private HubConnection? _hubConnection;
    private bool _loaded;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || _loaded)
        {
            return;
        }

        if (!await EnsureAuthorizedAsync())
        {
            return;
        }

        _loaded = true;
        _hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/orderHub"))
            .WithAutomaticReconnect()
            .Build();

        _hubConnection.On<Guid>("orders-changed", async _ =>
        {
            _summaries = await StatsService.GetDrinkTotalsAsync();
            await InvokeAsync(StateHasChanged);
        });

        await _hubConnection.StartAsync();
        _summaries = await StatsService.GetDrinkTotalsAsync();
        await InvokeAsync(StateHasChanged);
    }

    public async ValueTask DisposeAsync()
    {
        if (_hubConnection is not null)
        {
            await _hubConnection.DisposeAsync();
        }
    }
}
