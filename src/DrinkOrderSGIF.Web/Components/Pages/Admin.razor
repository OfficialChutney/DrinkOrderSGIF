@page "/admin"
@inherits AdminPageBase

<PageTitle>Admin</PageTitle>

@if (!IsAuthorized)
{
    <p>Redirecting to login...</p>
}
else
{
    <h1>Admin</h1>

    <div class="admin-grid">
        <a class="admin-card" href="/admin/teams">
            <h2>Hold</h2>
            <p>Tilføj eller fjern hold som kan bestille drikkelse.</p>
        </a>
        <a class="admin-card" href="/admin/drinks">
            <h2>Drinks</h2>
            <p>Rediger udvalg af drinks til bestilling.</p>
        </a>
        <a class="admin-card" href="/admin/orders">
            <h2>Ordrer</h2>
            <p>Se aktive ordrer og markér dem som udført.</p>
        </a>
        <a class="admin-card" href="/admin/stats">
            <h2>Statistik</h2>
            <p>Se et overblik over bestillinger fordelt på hold og drink type.</p>
        </a>
    </div>
}
