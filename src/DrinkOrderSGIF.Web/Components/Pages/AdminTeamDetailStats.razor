@page "/admin/stats/teams/{TeamId:guid}"
@inherits AdminPageBase

@inject IStatsService StatsService
@inject ITeamService TeamService
@inject NavigationManager Navigation

@using Microsoft.AspNetCore.SignalR.Client
@implements IAsyncDisposable

<PageTitle>Hold bestilling statistik</PageTitle>

@if (!IsAuthorized)
{
    <p>Sender til login side...</p>
}
else if (_teamName is null)
{
    <p>Hold ikke fundet.</p>
}
else
{
    <h1>@_teamName</h1>

    @if (_summaries.Count == 0)
    {
        <p>Ingen drinks er bestilt for dette hold endnu.</p>
    }
    else
    {
        <div class="admin-list">
            @foreach (var summary in _summaries)
            {
                <div class="admin-row">
                    <strong>@summary.DrinkName</strong>
                    <span>@summary.Quantity</span>
                </div>
            }
        </div>
    }
}

@code {
    [Parameter]
    public Guid TeamId { get; set; }

    private string? _teamName;
    private IReadOnlyList<TeamDrinkSummary> _summaries = Array.Empty<TeamDrinkSummary>();
    private Guid? _loadedTeamId;
    private HubConnection? _hubConnection;
    private bool _loaded;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if ((!firstRender && _loaded) && _loadedTeamId == TeamId)
        {
            return;
        }

        if (!await EnsureAuthorizedAsync())
        {
            return;
        }

        if (!_loaded)
        {
            _loaded = true;
            _hubConnection = new HubConnectionBuilder()
                .WithUrl(Navigation.ToAbsoluteUri("/orderHub"))
                .WithAutomaticReconnect()
                .Build();

            _hubConnection.On<Guid>("orders-changed", async _ =>
            {
                await LoadTeamStatsAsync();
                await InvokeAsync(StateHasChanged);
            });

            await _hubConnection.StartAsync();
        }

        await LoadTeamStatsAsync();
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadTeamStatsAsync()
    {
        _loadedTeamId = TeamId;
        var team = await TeamService.GetTeamByIdAsync(TeamId);
        _teamName = team?.Name;
        _summaries = _teamName is null
            ? Array.Empty<TeamDrinkSummary>()
            : await StatsService.GetTeamDrinkSummaryAsync(TeamId);
    }

    public async ValueTask DisposeAsync()
    {
        if (_hubConnection is not null)
        {
            await _hubConnection.DisposeAsync();
        }
    }
}
