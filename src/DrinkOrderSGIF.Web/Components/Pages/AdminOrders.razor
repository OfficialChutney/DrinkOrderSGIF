@page "/admin/orders"
@inherits AdminPageBase
@implements IAsyncDisposable

@using OrderEntity = DrinkOrderSGIF.Domain.Entities.Order

@inject IOrderService OrderService
@inject IDrinkService DrinkService
@inject NavigationManager Navigation

@using Microsoft.AspNetCore.SignalR.Client
@using System.Globalization

<PageTitle>Ordrer</PageTitle>

@if (!IsAuthorized)
{
    <p>Sender til login side...</p>
}
else
{
    <h1>Afventende ordrer</h1>

    @if (_orders.Count == 0)
    {
        <p>Ingen afventende ordrer</p>
    }
    else
    {
        <div class="order-list">
            @foreach (var order in _orders)
            {
                <div class="order-card">
                    <div class="order-header">
                        <div>
                            <strong>@order.TeamName</strong>
                            <div class="order-subtitle">@order.CreatedAt.ToLocalTime().ToString("g")</div>
                        </div>
                        <button class="order-button" @onclick="() => CompleteOrder(order.Id)">Ordre Gennemf√∏rt</button>
                    </div>
                    <div class="order-items">
                        @{
                            var totals = GetOrderTotals(order);
                        }
                        @foreach (var item in order.Items.OrderBy(i => i.DrinkName))
                        {
                            <div class="order-item-row">
                                <span>@item.DrinkName</span>
                                <span>Antal: @item.Quantity | @GetItemPriceLabel(item)</span>
                            </div>
                        }
                        <div class="order-item-row">
                            <strong>Total i DKK (alt i DKK):</strong>
                            <strong>@totals.DkkAll</strong>
                        </div>
                        <div class="order-item-row">
                            <strong>Total i Klips:</strong>
                            <strong>@FormatKlips(Math.Ceiling(totals.Klips))</strong>
                        </div>
                        <div class="order-item-row">
                            <strong>Obligatorisk DKK:</strong>
                            <strong>@totals.MandatoryDkk</strong>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}

@code {
    private IReadOnlyList<OrderEntity> _orders = Array.Empty<OrderEntity>();
    private IReadOnlyDictionary<Guid, DrinkPricing> _drinkPricingLookup = new Dictionary<Guid, DrinkPricing>();
    private HubConnection? _hubConnection;
    private bool _loaded;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || _loaded)
        {
            return;
        }

        if (!await EnsureAuthorizedAsync())
        {
            return;
        }

        _loaded = true;
        _hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/orderHub"))
            .WithAutomaticReconnect()
            .Build();

        _hubConnection.On<Guid>("orders-changed", async _ =>
        {
            await LoadOrdersAsync();
            await InvokeAsync(StateHasChanged);
        });

        await _hubConnection.StartAsync();
        await LoadOrdersAsync();
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadOrdersAsync()
    {
        _orders = await OrderService.GetPendingOrdersAsync();
        var drinks = await DrinkService.GetAllDrinksAsync();
        _drinkPricingLookup = drinks
            .GroupBy(drink => drink.Id)
            .ToDictionary(group => group.Key,
                group => new DrinkPricing(group.First().Price, group.First().KlipsPrice));
    }

    private string GetItemPriceLabel(OrderItem item)
    {
        if (!_drinkPricingLookup.TryGetValue(item.DrinkId, out var pricing))
        {
            return "Ukendt";
        }

        var label = $"{item.Quantity * pricing.PriceDkk} DKK";
        if (pricing.KlipsPrice.HasValue)
        {
            var klipsTotal = item.Quantity * pricing.KlipsPrice.Value;
            label = $"{label} / {FormatKlips(Math.Ceiling(klipsTotal))} Klips";
        }

        return label;
    }

    private OrderTotals GetOrderTotals(OrderEntity order)
    {
        var totalDkkAll = 0;
        var totalKlips = 0m;
        var mandatoryDkk = 0;
        foreach (var item in order.Items)
        {
            if (_drinkPricingLookup.TryGetValue(item.DrinkId, out var pricing))
            {
                var dkkTotal = item.Quantity * pricing.PriceDkk;
                totalDkkAll += dkkTotal;
                if (pricing.KlipsPrice.HasValue)
                {
                    totalKlips += item.Quantity * pricing.KlipsPrice.Value;
                }
                else
                {
                    mandatoryDkk += dkkTotal;
                }
            }
        }

        return new OrderTotals(totalKlips, totalDkkAll, mandatoryDkk);
    }

    private sealed record DrinkPricing(int PriceDkk, decimal? KlipsPrice);
    private sealed record OrderTotals(decimal Klips, int DkkAll, int MandatoryDkk);

    private static string FormatKlips(decimal value)
    {
        return value.ToString("0", CultureInfo.GetCultureInfo("da-DK"));
    }

    private async Task CompleteOrder(Guid orderId)
    {
        await OrderService.CompleteOrderAsync(orderId);
        await LoadOrdersAsync();
    }

    public async ValueTask DisposeAsync()
    {
        if (_hubConnection is not null)
        {
            await _hubConnection.DisposeAsync();
        }
    }
}
